{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "noEmit": true,
    "types": ["vite/client"],
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "resolveJsonModule": true,
    "tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo",
    "paths": {
      "@/storybook/*": ["./src/*"]
    }
  },
  "exclude": [
    "out-tsc",
    "dist",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.vue",
    "src/**/*.test.vue",
    "eslint.config.js",
    "eslint.config.cjs",
    "eslint.config.mjs"
  ],
  "include": [
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.ts",
    "src/**/*.vue",
    "../../libs/**/*"
  ],
  "references": [
    {
      "path": "../../libs/ui/tsconfig.lib.json"
    },
    {
      "path": "../../libs/styles/tsconfig.lib.json"
    },
    {
      "path": "../../libs/icons/tsconfig.lib.json"
    },
    {
      "path": "../../libs/core/tsconfig.lib.json"
    }
  ]
}

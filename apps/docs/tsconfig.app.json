{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "noEmit": true,
    "types": ["vite/client"],
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "resolveJsonModule": true,
    "tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo",
    "paths": {
      "@/docs/*": ["docs/*"]
    }
  },
  "exclude": [
    "out-tsc",
    "dist",
    "docs/**/*.spec.ts",
    "docs/**/*.test.ts",
    "docs/**/*.spec.vue",
    "docs/**/*.test.vue",
    "eslint.config.js",
    "eslint.config.cjs",
    "eslint.config.mjs"
  ],
  "include": ["docs/**/*.js", "docs/**/*.jsx", "docs/**/*.ts", "docs/**/*.vue"]
}
